generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String    
  cpf                  String    @unique
  email                String    @unique
  password             String
  type                 UserType
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Enterprise {
  id                   Int       @id @default(autoincrement())
  companyname          String    @unique
  fantasyName          String
  cpnj                 String    @unique
  stateRegistration    String
  
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

enum UserType {
    ADMIN
    DEFAULT
}